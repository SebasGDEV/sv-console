{
  "name": "sv-console",
  "version": "1.0.0",
  "description": "A Svelte library for floating console dev tools with JSON highlighting - only shows in dev mode",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "svelte": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./auto": {
      "types": "./dist/auto.d.ts",
      "import": "./dist/auto.js",
      "default": "./dist/auto.js"
    }
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "@lucide/svelte": "^0.542.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.3.1",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.0",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.4.1",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "keywords": [
    "svelte",
    "development",
    "floating",
    "cards",
    "theme",
    "toggle",
    "dev-tools"
  ],
  "author": "sebastiangarzon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SebasGDEV/sv-console.git"
  },
  "bugs": {
    "url": "https://github.com/SebasGDEV/sv-console/issues"
  },
  "homepage": "https://github.com/SebasGDEV/sv-console#readme",
  "publishConfig": {
    "access": "public"
  }
}
